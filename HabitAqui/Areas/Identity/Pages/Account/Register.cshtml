@page
@model RegisterModel
@{
    ViewData["Title"] = "Registar";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow">
                <div class="card-body">
                    <h3 class="card-title text-center text-uppercase">@ViewData["Title"]</h3>
                    <hr class="my-4" />

                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <!-- Left Column -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Input.Nome" class="form-label"></label>
                                    <input asp-for="Input.Nome" class="form-control" placeholder="Nome" autocomplete="" aria-required="true" />
                                    <span asp-validation-for="Input.Nome" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Input.CodigoPostal" class="form-label"></label>
                                    <input asp-for="Input.CodigoPostal" class="form-control" placeholder="XXXX-YYY" autocomplete="" aria-required="true" />
                                    <span asp-validation-for="Input.CodigoPostal" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="Input.Morada" class="form-label"></label>
                                    <input asp-for="Input.Morada" class="form-control" placeholder="Rua, Nº" autocomplete="" aria-required="true" />
                                    <span asp-validation-for="Input.Morada" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Input.Nif" class="form-label"></label>
                                    <input asp-for="Input.Nif" class="form-control" placeholder="XXXXXXXXX" autocomplete="" aria-required="true" />
                                    <span asp-validation-for="Input.Nif" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Right Column -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Input.Apelido" class="form-label"></label>
                                    <input asp-for="Input.Apelido" class="form-control" placeholder="Apelido" autocomplete="" aria-required="true" />
                                    <span asp-validation-for="Input.Apelido" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="Input.Cidade" class="form-label"></label>
                                    <input asp-for="Input.Cidade" class="form-control" placeholder="Cidade" autocomplete="" aria-required="true" />
                                    <span asp-validation-for="Input.Cidade" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Input.Pais" class="form-label"></label>
                                    <input asp-for="Input.Pais" class="form-control" placeholder="País" autocomplete="" aria-required="true" />
                                    <span asp-validation-for="Input.Pais" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="911111111" autocomplete="" aria-required="true" />
                                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Fields below the columns -->
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label"></label>
                            <input asp-for="Input.Email" class="form-control" placeholder="" autocomplete="username" aria-required="true" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label"></label>
                            <input asp-for="Input.Password" type="password" class="form-control" placeholder="Palavra-Chave" autocomplete="new-password" aria-required="true" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                            <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Confirme Palavra-Chave" autocomplete="new-password" aria-required="true" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="d-grid">
                            <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg">Registar</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- External Authentication Section -->
            <section class="mt-4">
                <h4 class="text-center">Metódo Alternativo para se registar</h4>
                <div class="d-flex justify-content-center">
                    @{
                        if ((Model.ExternalLogins?.Count ?? 0) > 0)
                        {
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="text-center">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-outline-secondary m-2" name="provider" value="@provider.Name">@provider.DisplayName</button>
                                }
                            </form>
                        }
                    }
                </div>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script src="https://code.jquery.com/jquery-3.6.0.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
