@page
@model IndexModel
@{
    ViewData["Title"] = "Dados Pessoais";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<link rel="stylesheet" href="~/css/area-admin.css"/>

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage"/>
<div class="container px-0">
    <div class="row">
        <div class="col-md-6">
            <h4>Informação geral</h4>
            <div class="row data-row">
                <div class="col-md-4 data-label">Nome completo</div>
                <div class="col-md-8 data-content">
                    <span>Adolfo Dias</span>
                </div>
            </div>
            <div class="row data-row">
                <div class="col-md-4 data-label">E-mail</div>
                <div class="col-md-8 data-content">
                    <span>adolfodias@ad.com</span>
                </div>
            </div>
            <div class="row data-row">
                <div class="col-md-4 data-label">Data de registo</div>
                <div class="col-md-8 data-content">
                    <span>12/34/5678</span>
                </div>
            </div>
            <div class="row data-row">
                <div class="col-md-4 data-label">Nº de telemóvel</div>
                <div class="col-md-8 data-content">
                    <span>123456789</span>
                </div>
            </div>
            <div class="row data-row">
                <div class="col-md-4 data-label">Nº de contribuinte</div>
                <div class="col-md-8 data-content">
                    <span>123456789</span>
                </div>
            </div>
        </div>
    </div>
    <hr/>
    <div class="row">
        <div class="col-md-6">
            <h4>Endereço</h4>
            <div class="row data-row">
                <div class="col-md-4 data-label">Morada</div>
                <div class="col-md-8 data-content">
                    <span>Rua Direita 1 - esquerdo</span>
                </div>
            </div>
            <div class="row data-row">
                <div class="col-md-4 data-label">Código Postal</div>
                <div class="col-md-8 data-content">
                    <span>1234-567 Coimbra</span>
                </div>
            </div>
            <div class="row data-row">
                <div class="col-md-4 data-label">Cidade</div>
                <div class="col-md-8 data-content">
                    <span>Coimbra</span>
                </div>
            </div>
            <div class="row data-row">
                <div class="col-md-4 data-label">País</div>
                <div class="col-md-8 data-content">
                    <span>Krakovia</span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 mt-4">
            <button id="edit-profile-button" type="button" class="btn btn-md btn-primary">Editar</button>
        </div>
    </div>
</div>
