@page
@model IndexModel
@{
    ViewData["Title"] = "Dados Pessoais";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<link rel="stylesheet" href="~/css/area-admin.css"/>

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage"/>
<div class="container px-0">
    <div class="row">
        <div class="col-md-6">
            <h4>Informação geral</h4>
            <div class="row data-row">
                <div class="col-md-4 data-label">Nome</div>
                <div class="col-md-8 data-content">
                    <span>@Model.Input.Nome @Model.Input.Apelido</span>
                </div>
            </div>
            <div class="row data-row">
                <div class="col-md-4 data-label">E-mail</div>
                <div class="col-md-8 data-content">
                    <span>@Model.Input.Email</span>
                </div>
            </div>
            <div class="row data-row">
                <div class="col-md-4 data-label">Password</div>
                <div class="col-md-8 data-content">
                    <span>********</span>
                </div>
            </div>

            <div class="row data-row">
                <div class="col-md-4 data-label">Data de registo</div>
                <div class="col-md-8 data-content">
                    <span>12/34/5678</span>
                </div>
            </div>
            <div class="row data-row">
                <div class="col-md-4 data-label">Nº de telemóvel</div>
                <div class="col-md-8 data-content">
                    <span>@Model.Input.PhoneNumber</span>
                </div>
            </div>
            <div class="row data-row">
                <div class="col-md-4 data-label">Nº de contribuinte</div>
                <div class="col-md-8 data-content">
                    <span>@Model.Input.Nif</span>
                </div>
            </div>
        </div>
    </div>
    <hr/>
    <div class="row">
        <div class="col-md-6">
            <h4>Endereço</h4>
            <div class="row data-row">
                <div class="col-md-4 data-label">Morada</div>
                <div class="col-md-8 data-content">
                    <span>@Model.Input.Localizacao?.Morada</span>
                </div>
            </div>
            <div class="row data-row">
                <div class="col-md-4 data-label">Código Postal</div>
                <div class="col-md-8 data-content">
                    <span>@Model.Input.Localizacao?.CodigoPostal @Model.Input.Localizacao?.Cidade</span>
                </div>
            </div>
            <div class="row data-row">
                <div class="col-md-4 data-label">Cidade</div>
                <div class="col-md-8 data-content">
                    <span>@Model.Input.Localizacao?.Cidade</span>
                </div>
            </div>
            <div class="row data-row">
                <div class="col-md-4 data-label">País</div>
                <div class="col-md-8 data-content">
                    <span>@Model.Input.Localizacao?.Pais</span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 mt-4">
            <a id="edit-profile-link" class="btn btn-md btn-primary" href="./Manage/EditarDados">Editar</a>
        </div>
    </div>
</div>

<script>
    $(document).ready(() => $("#edit-profile-link").click(() => {
        $("#profile").removeClass("active");
    }));
</script>
