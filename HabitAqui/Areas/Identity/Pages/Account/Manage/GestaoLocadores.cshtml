@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
    <script>
        function toggleAdicionar() {
            const adicionarGestor = document.getElementById("adicionar-gestor");
            if (adicionarGestor.style.display === "none") {
                adicionarGestor.style.display = "block";
            } else {
                adicionarGestor.style.display = "none";
            }
        }
    </script>
