<table class="table table-striped">
    <thead>
    <tr>
        <th class="identificador">
            @Html.DisplayNameFor(model => model.Input.NomeLocador)
        </th>
        <th class="identificador">
            @Html.DisplayNameFor(model => model.Input.EstadoDaSubscricao)
        </th>
        <th class="identificador">Estado</th>
        <th class="identificador">Total de Habitações</th>
        <th class="identificador">
            @Html.DisplayNameFor(model => model.Input.Administradores)
        </th>
        <th class="identificador"></th> <!-- Coluna vazia para os botões -->
    </tr>
    </thead>
    <tbody>
    @if (Model != null && Model.Locadores != null)
    {
        @if (Model.Locadores.Count == 0)
        {
            <tr>
                <td colspan="5">Não existem locadores registados.</td>
            </tr>
        }
        else
        {
            @foreach (var loc in Model.Locadores)
            {
                <tr>
                    <td>@Html.DisplayFor(model => loc.Nome)</td>
                    <td>@Html.DisplayFor(model => loc.EstadoDaSubscricao)</td>
                    <td>@Html.DisplayFor(model => loc.Active ? "Ativo" : "Inativo")</td>
                    <td>@Html.DisplayFor(model => loc.Habitacoes.Count)</td>
                    @switch (loc.Administradores.Count)
                    {
                        case 0:
                            <td>Nenhum gestor associado. Adicione um gestor.</td>
                            break;
                        case 1:
                            <td>@loc.Administradores.First().Nome @loc.Administradores.First().Apelido</td>
                            break;
                        default:
                            <td>Vários gestores. Clicar para ver mais informação.</td>
                            break;
                    }
                    <td>
                        <a class="btn btn-success btn-sm"
                           href="@Url.Action("Detalhes", "Locador", new { id = loc.Id })">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </a> @* ao clicar neste botão, abrir uma página com os detalhes do locador *@
                        <a class="btn btn-primary btn-sm ">
                            <i class="fa-solid fa-pen"></i>
                        </a> @* ao clicar neste botão, abrir uma modal para editar o locador *@
                        <a class="btn btn-danger btn-sm" href="#" id="deleteLocador" data-bs-toggle="modal" data-bs-target="#confirmationModal">
                            <i class="fa-solid fa-trash"></i>
                        </a> @* ao clicar neste botão, abrir uma modal para confirmar a eliminação do locador *@
                    </td>
                </tr>
            }
        }
    }

    </tbody>
    <tfoot>
    <tr>
    <td colspan="5">
        <a class="btn btn-success"
           data-bs-toggle="modal"
           data-bs-target="#adicionarLocadorModal"
           @*data-locador-id="@Model.Locador.Id"*@>
            <i class="fa-regular fa-plus" aria-hidden="true"></i>
        </a>
    </td>
    </tfoot>
</table>
