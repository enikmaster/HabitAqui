@using HabitAqui.Models
@inject SignInManager<DetalhesUtilizador> SignInManager
@inject UserManager<DetalhesUtilizador> UserManager

@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<ul class="nav nav-pills flex-column">
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">Dados Pessoais</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">Alterar Password</a>
    </li>

    @if (User.IsInRole("Cliente"))
    {
        <li class="nav-item">
            <a class="nav-link" asp-page="">Os meus Alugueres</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-page="">As minhas Avaliações</a>
        </li>
    }
    @if (User.IsInRole("Funcionario") || User.IsInRole("Gestor"))
    {
        <li class="nav-item">
            <a class="nav-link" asp-page="">Gestão de Habitações</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-page="">Gestão de Reservas</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-page="">Gestão de Entregas</a>
        </li>
    }
    @if (User.IsInRole("Gestor"))
    {
        <li class="nav-item">
            <a class="nav-link" asp-page="">Gestão de Funcionários</a>
        </li>
    }
    @if (User.IsInRole("Administrador"))
    {
        <li class="nav-item">
            <a class="nav-link" asp-page="">Gestão de Locadores</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-page="">Gestão de Categorias</a>
        </li>
        <li class="nav-item">
            <a class="nav-link @ManageNavPages.ListarUtilizadorNavClass(ViewContext)" id="ListarUtilizador" asp-page="./ListarUtilizadores">Gestão de Utilizadores</a>
        </li>
    }
</ul>