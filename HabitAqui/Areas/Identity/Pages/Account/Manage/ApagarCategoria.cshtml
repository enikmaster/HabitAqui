@page "{id:int}"
@model HabitAqui.Areas.Identity.Pages.Account.Manage.ApagarCategoriaModel
@{
    ViewData["Title"] = "Apagar Categoria";
}

<h2>Deseja apagar a categoria: @Model.CategoriaNome</h2>

<form method="post">
    <input type="hidden" asp-for="CategoriaId" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div> 
    <p>Tem certeza de que deseja apagar esta categoria?</p>
    <button type="submit" class="btn btn-danger">Apagar</button>
    <a asp-page="./GestaoCategorias" class="btn btn-secondary">Cancelar</a>
</form>
