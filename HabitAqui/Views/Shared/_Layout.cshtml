@using HabitAqui.Data
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - HabitAqui</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/HabitAqui.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">


</head>
<body class="dark-bg">
<header>
    <nav class="navbar navbar-expand-lg navbar-toggleable-sm mb-3 navbar-blue">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Habitacao" asp-action="Index">
                <img class="nav-logo" src="~/imgs/logo_transparent.png"/>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>


            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1 mr-auto">
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Habitacao" asp-action="Index">Habitações</a>
                    </li>
                    @if (User.IsInRole(Roles.Gestor.ToString()))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Gestão de Funcionários
                            </a>
                            <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-controller="Funcionario" asp-action="ListarFuncionarios">Ver Todos</a>
                                    <a class="dropdown-item" asp-controller="Funcionario" asp-action="AdicionarGestor">Adicionar</a>
                                <a class="dropdown-item" href="#">Editar</a>
                                <a class="dropdown-item" href="#">Remover</a>
                            </div>

                        </li>
                    }
                    @if (User.IsInRole(Roles.Gestor.ToString()) || User.IsInRole(Roles.Funcionario.ToString()))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Gestão de Habitações
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">Ver todos</a>
                                <a class="dropdown-item" asp-controller="Habitacao" asp-action="Create">Adicionar</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Gestão de Arrendamentos
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-area="" asp-controller="Reservas" asp-action="ListarReservas">Reservas</a>
                                <a class="dropdown-item" href="#">Entregas</a>
                                <a class="dropdown-item" href="#">Cenas</a>
                                <a class="dropdown-item" href="#">Outras cenas</a>
                            </div>
                        </li>
                        @*<li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Reservas" asp-action="ListarReservas">Listar Reservas</a>
                        </li>*@
                    }
                        @if (User.IsInRole(Roles.Cliente.ToString()))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Gestão de Reservas
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
@*                                     <li><a class="dropdown-item" asp-area="" asp-controller="Reservas" asp-action="ListarReservas">Reservas</a></li>

 *@
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Reservas" asp-action="ListarReservasCliente">Reservas</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Reservas" asp-action="Historico">Histórico de Arrendamentos</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Habitacao" asp-action="MinhasAvaliacoes">Avaliações</a></li>
                                </ul>
                            </li>
                        }

                </ul>

                <partial name="_LoginPartial"/>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container footer-container">
        &copy; 2023 - HabitAqui

        <div class="footer-links">
            <a class="footer-text-color" asp-area="" asp-controller="" asp-action="">Privacy</a>|
            <a class="footer-text-color" asp-area="" asp-controller="" asp-action="">Contact</a>|
            <a class="footer-text-color" asp-area="" asp-controller="" asp-action="">Support</a> |
            <a class="footer-text-color" asp-area="" asp-controller="" asp-action="">About Us</a> |
            <a class="footer-text-color" asp-area="" asp-controller="" asp-action="">FAQ</a>
        </div>

        <div class="footer-social">
            <a href="your-facebook-url">
                <i class="bi bi-facebook"></i>
            </a>
            <a href="your-twitter-url">
                <i class="bi bi-twitter"></i>
            </a>
            <a href="your-instagram-url">
                <i class="bi bi-instagram"></i>
            </a>
            <a href="your-linkedin-url">
                <i class="bi bi-linkedin"></i>
            </a>
        </div>

        <div class="footer-contact">
            <p>
                Your Company Address |
                Contact Number: +123456789 |
                Email: info@habitAqui.com
            </p>
        </div>
    </div>
</footer>
@*<script src="~/lib/jquery/dist/jquery.min.js"></script>*@
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.10.2/umd/popper.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", false)
</body>
</html>