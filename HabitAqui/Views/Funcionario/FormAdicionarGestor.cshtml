@model HabitAqui.Models.DetalhesUtilizador


@{
    ViewData["Title"] = "Adicionar Gestor";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AdicionarGestor" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nome">Nome</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Apelido">Apelido</label>
        <input asp-for="Apelido" class="form-control" />
        <span asp-validation-for="Apelido" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Nif">NIF</label>
        <input asp-for="Nif" class="form-control" />
        <span asp-validation-for="Nif" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">Número de Telefone</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="Active">Ativo</label>
        <input asp-for="Active" type="checkbox" />
    </div>

    <h3>Localização</h3>

    <div class="form-group">
        <label asp-for="Localizacao.Morada">Morada</label>
        <input asp-for="Localizacao.Morada" class="form-control" />
        <span asp-validation-for="Localizacao.Morada" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Localizacao.CodigoPostal">Código Postal</label>
        <input asp-for="Localizacao.CodigoPostal" class="form-control" />
        <span asp-validation-for="Localizacao.CodigoPostal" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Localizacao.Cidade">Cidade</label>
        <input asp-for="Localizacao.Cidade" class="form-control" />
        <span asp-validation-for="Localizacao.Cidade" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Localizacao.Pais">País</label>
        <input asp-for="Localizacao.Pais" class="form-control" />
        <span asp-validation-for="Localizacao.Pais" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
    </div>
</form>