@model HabitAqui.Models.Avaliacao

@{
    ViewData["Title"] = "Avaliar Habitação";
}

<h2>@ViewData["Title"]</h2>




<form asp-controller="Habitacao" asp-action="Avaliar" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="HabitacaoId" />
    
    <div class="form-group">
        <label asp-for="Nota">Nota</label>
        <input asp-for="Nota" class="form-control" type="number" min="1" max="5" step="1" />
        <span asp-validation-for="Nota" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Comentario">Comentário</label>
        <textarea asp-for="Comentario" class="form-control"></textarea>
        <span asp-validation-for="Comentario" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar Avaliação</button>
</form>

